generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BlogPost {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  summary     String
  content     String
  coverImage  String?
  readTime    Int      @default(2)
  views       Int      @default(0)
  publishedAt DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
